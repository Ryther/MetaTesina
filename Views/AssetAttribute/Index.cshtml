@model IEnumerable<MetaTesina.Models.AssetAttribute>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AssetTypeName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssetTypeDescription)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetTypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetType.AssetTypeDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssetAttributeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssetAttributeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssetAttributeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
