@model IEnumerable<MetaTesina.Models.ApplicationUser>

@{
    ViewData["Title"] = "Utenti";
}

<h2>Utenti</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUserNickname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUserFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUserLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUserNickname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
